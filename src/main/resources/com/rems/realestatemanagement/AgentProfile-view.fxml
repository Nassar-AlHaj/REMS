<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rems.realestatemanagement.Controller.AgentProfileController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER_RIGHT">
                <Button onAction="#goToAddAgentPage"
                        styleClass="primary-button"
                        style="-fx-background-color: #1D4634; -fx-text-fill: WHITE; -fx-cursor: hand;"
                        minWidth="106.0"
                        minHeight="26.0">
                    <graphic>
                        <Text text="Add Agent" fill="WHITE"/>
                    </graphic>
                    <padding>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0"/>
                    </padding>
                </Button>
                <HBox.margin>
                    <Insets bottom="10.0"/>
                </HBox.margin>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox>
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <TableView fx:id="agentTable"
                       VBox.vgrow="ALWAYS"
                       styleClass="centered-table">
                <columns>
                    <TableColumn fx:id="idColumn"
                                 minWidth="50.0"
                                 text="ID"
                                 style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="usernameColumn"
                                 minWidth="150.0"
                                 text="Username"
                                 style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="emailColumn"
                                 minWidth="200.0"
                                 text="Email Address"
                                 style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="passwordColumn"
                                 minWidth="200.0"
                                 text="Password"
                                 style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="actionColumn"
                                 minWidth="150.0"
                                 text="Action"
                                 style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
                <style>
                    -fx-cell-size: 45;
                </style>
            </TableView>
        </VBox>
    </center>
</BorderPane>