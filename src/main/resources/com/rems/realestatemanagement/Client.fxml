<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rems.realestatemanagement.Controller.ClientController">
    <stylesheets>
        <URL value="@table.css" />
    </stylesheets>
    <VBox AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <StackPane style="-fx-background-color: linear-gradient(to right, #2b634b, #3a7a5f);">
            <padding>
                <Insets top="15" bottom="15"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
                <ImageView fitHeight="47.0" fitWidth="115.0" preserveRatio="true">
                    <Image url="@img/Group.png" />
                </ImageView>
                <Label text="REMS" textFill="#104028" style="-fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 10, 0, 0, 0);">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="CLIENTS" textFill="WHITE" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 0);">
                    <font>
                        <Font size="24.0" name="System Bold"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </StackPane>


        <HBox VBox.vgrow="ALWAYS" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>


            <VBox minWidth="400" maxWidth="600" HBox.hgrow="SOMETIMES" spacing="10"
                  style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-border-radius: 8; -fx-background-radius: 8;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <GridPane fx:id="formGrid" vgap="20" hgap="15" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150" maxWidth="200" halignment="LEFT"/>
                        <ColumnConstraints minWidth="200" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                        <RowConstraints minHeight="45" prefHeight="50" vgrow="ALWAYS"/>
                    </rowConstraints>

                    <Label text="ID:" GridPane.rowIndex="0"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="idField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: #f8f8f8; -fx-font-size: 15;">
                    </TextField>

                    <Label text="First Name:" GridPane.rowIndex="1"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: white; -fx-font-size: 15;">
                    </TextField>

                    <Label text="Last Name:" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: white; -fx-font-size: 15;">
                    </TextField>

                    <Label text="Phone:" GridPane.rowIndex="3"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: white; -fx-font-size: 15;">
                    </TextField>

                    <Label text="Email:" GridPane.rowIndex="4"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: white; -fx-font-size: 15;">
                    </TextField>

                    <Label text="Address:" GridPane.rowIndex="5"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                                    -fx-background-color: white; -fx-font-size: 15;">
                    </TextField>

                    <Label text="Categorization:" GridPane.rowIndex="6"
                           style="-fx-font-weight: bold; -fx-text-fill: #2B634B;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <ComboBox fx:id="categorizationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"
                              style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc;
                -fx-background-color: white; -fx-font-size: 15;">
                    </ComboBox>
                </GridPane>
            </VBox>


            <VBox HBox.hgrow="ALWAYS"
                  style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-border-radius: 8; -fx-background-radius: 8;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <TableView fx:id="clientsTable" VBox.vgrow="ALWAYS"
                           style="-fx-font-size: 15px; -fx-background-radius: 6; -fx-border-radius: 6;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" minWidth="70" maxWidth="100"
                                     style="-fx-alignment: CENTER-LEFT; -fx-font-weight: bold;"/>
                        <TableColumn fx:id="firstNameColumn" text="First Name" minWidth="140"
                                     style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="lastNameColumn" text="Last Name" minWidth="140"
                                     style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="phoneColumn" text="Phone" minWidth="130"
                                     style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="emailColumn" text="Email" minWidth="200"
                                     style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="addressColumn" text="Address" minWidth="220"
                                     style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="categorizationColumn" text="Categorization" minWidth="70" maxWidth="100"
                                     style="-fx-alignment: CENTER-LEFT; -fx-font-weight: bold;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <Button fx:id="addButton" text="Add"
                    style="-fx-background-color: #2B634B; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 16; -fx-min-width: 160; -fx-min-height: 45;
                           -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 0);
                           -fx-cursor: hand;">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
            <Button fx:id="editButton" text="Edit"
                    style="-fx-background-color: #2B634B; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 16; -fx-min-width: 160; -fx-min-height: 45;
                           -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 0);
                           -fx-cursor: hand;">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
            <Button fx:id="removeButton" text="Remove"
                    style="-fx-background-color: #E09B6B; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 16; -fx-min-width: 160; -fx-min-height: 45;
                           -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 0);
                           -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</AnchorPane>
