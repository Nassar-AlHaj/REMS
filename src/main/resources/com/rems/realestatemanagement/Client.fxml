<AnchorPane prefHeight="459.0" prefWidth="911.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rems.realestatemanagement.Controller.clientController">
   <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2b634b" height="65.0" stroke="#2b634b" strokeType="INSIDE" width="911.0" />
    <!-- Title Label -->
    <Label layoutX="395.0" layoutY="18.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="CLIENTS" textFill="WHITE" />
    
    <!-- Form Section -->
    <GridPane fx:id="formGrid" hgap="10" layoutX="53.0" layoutY="89.0" prefHeight="249.0" prefWidth="355.0" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints />
        </columnConstraints>

        <!-- ID Row -->
        <Label prefHeight="28.0" prefWidth="70.0" text="ID:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
        <TextField fx:id="idField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- First Name Row -->
        <Label prefHeight="29.0" prefWidth="73.0" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="firstNameField" prefHeight="25.0" prefWidth="144.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Last Name Row -->
        <Label prefHeight="31.0" prefWidth="74.0" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Phone Row -->
        <Label prefHeight="31.0" prefWidth="73.0" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Email Row -->
        <Label prefHeight="27.0" prefWidth="74.0" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Address Row -->
        <Label prefHeight="32.0" prefWidth="72.0" text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="5">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    
    <!-- Table Section -->
    <TableView fx:id="clientsTable" layoutX="427.0" layoutY="81.0" prefHeight="249.0" prefWidth="477.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
            <TableColumn fx:id="phoneColumn" text="Phone" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="addressColumn" text="Address" />
        </columns>
    </TableView>
    
    <!-- Buttons -->
    <HBox alignment="CENTER" layoutX="53.0" layoutY="368.0" prefHeight="47.0" prefWidth="805.0" spacing="20">
        <Button fx:id="addButton" prefHeight="29.0" prefWidth="147.0" style="-fx-background-color: #2B634B;" text="Add" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
        <Button fx:id="editButton" prefHeight="32.0" prefWidth="147.0" style="-fx-background-color: #2B634B;" text="Edit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
        <Button fx:id="removeButton" prefHeight="31.0" prefWidth="127.0" style="-fx-background-color: #E09B6B;" text="Remove" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
    </HBox>
   <ImageView fitHeight="47.0" fitWidth="115.0" layoutX="9.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../../../Desktop/Group.png" />
      </image>
   </ImageView>
   <Label layoutX="117.0" layoutY="13.0" prefHeight="40.0" prefWidth="79.0" text="REMS" textFill="#104028">
      <font>
         <Font name="System Bold" size="28.0" />
      </font>
   </Label>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
