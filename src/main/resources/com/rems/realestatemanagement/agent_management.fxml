<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.util.Callback?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox spacing="10" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.rems.realestatemanagement.Controller.AgentController">
    <!-- Add Agent Button -->
    <HBox alignment="TOP_RIGHT" spacing="10" padding="10">
        <Button text="Add Agent" fx:id="addAgentButton" onAction="#handleAddAgent" />
    </HBox>

    <!-- TableView -->
    <TableView fx:id="agentTableView" prefHeight="400" prefWidth="600">
        <columns>
            <!-- ID Column -->
            <TableColumn text="ID" prefWidth="50">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <!-- Agent Name Column -->
            <TableColumn text="Agent Name" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="agentName"/>
                </cellValueFactory>
            </TableColumn>
            <!-- Email Address Column -->
            <TableColumn text="Email Address" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="email"/>
                </cellValueFactory>
            </TableColumn>
            <!-- Password Hash Column -->
            <TableColumn text="Password Hash" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="passwordHash"/>
                </cellValueFactory>
            </TableColumn>
            <!-- Action Column -->
            <TableColumn text="Action" prefWidth="150">
                <cellFactory>
                    <Callback fx:factory="controllers.ActionCellFactory"/>
                </cellFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
